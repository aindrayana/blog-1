<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

<h2><p class="text-center">login</p></h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email, "what is your email?"%>
    <%= email_field_tag :email, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "and your password?" %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>
  <br>
  <div class="">
    <%= submit_tag "login", class: "btn btn-primary btn-md btn-block" %>
  </div>
<% end %>

    </div>
    <div class="col-md-3"></div>
</div>
