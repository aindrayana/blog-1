
<br>
<div class="text-center">
  <% if @user.image.present? %>
  <%= image_tag @user.image.url(:medium), class: "img-circle" %>
  <% end %>
</div>
<h3 class="text-center"> <%= @user.full_name %> </h3>

<% if @user == current_user %>
<p class="text-center"><%= link_to "Edit profile", edit_user_path %></p>
<% end %>


<table>
  <% @posts.each do |post| %>

    <tr>
      <td>
        <h1><%= link_to post.title, post_path(post) %></h1>

        <% if post.user %>
          <p class="text-left">
            <%= link_to (image_tag post.user.image.url(:thumb), class: "img-circle"), user_path(post.user.id) %>
            <%= link_to post.user.full_name, user_path(post.user.id)%>
            <%= "@" + post.user.created_at.strftime(" %b %d, %Y")  %>
          </p>
        <% end %>

        <% if post.image.present? %>
          <%= link_to (image_tag post.image.url(:post_size)), post_path(post)%>
        <% end %>
        <p class="texto"><%= post.body.truncate(150) %></p>
        <hr/>
      </td>
    </tr>

  <% end %>
</table>
